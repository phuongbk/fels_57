<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("title.header"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("title.home2"), root_path %></li>
        <li><%= link_to t("title.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("title.user"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <% t "menu.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("menu.profile"), current_user %></li>
              <li><%= link_to t("menu.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("title.logout"), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("title.login"), "#" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>