<aside>
  <section class="user_info">
    <h1>
      <%= link_to category.name, [:admin, category] %>
      <%= link_to "", admin_category_path(category), method: :delete, data: {confirm: 
        t("confirm.sure")}, class: "glyphicon glyphicon-trash" %>
    </h1>
    <p>
      <%= category.description %>
    </p>
    <p>
      <%= t "info.created_time" %><%= category.created_at %>
    </p>
    <p>
      <%= t "info.updated_time" %><%= category.updated_at %>
    </p>
  </section>
</aside>